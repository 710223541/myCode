<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
<meta name="format-detection" content="telephone=no"/>
<title>无标题文档</title>
<style type="text/css">
*{margin:0;padding:0;}
.div1{width:100%;height:100px;background:red;margin-bottom:3%;}
.div2{width:100%;height:100px;background:green;}
.div3{width:100px;height:100px;background:blue;margin:3% auto 0;color:#fff;font-size:16px;}
</style>
</head>

<body>
<div class="div1">将军战列舰</div>
<div class="div2">雍刀巡洋舰</div>
<div class="div3"></div>
<script src="zepto.min.js"></script>
<script type="text/javascript">
$(".div1").click(function(){
	$(this).css("background","yellow");	
})
$(".div2").click(function(){
	$(this).css("background","pink");	
})
var w = $(".div3").width();
var h = $(".div3").height();
$(".div3").text("高："+h+" 宽："+w);
</script>
</body>
</html>
